package SelfProgramming;

import java.util.Scanner;

public class Echo {

	public static void main(String[] args) {
		String message;
		
		Scanner scan = new Scanner (System.in);
		
		System.out.println("Enter a line of a text:");
		
		message = scan.next();
		
		System.out.println("You entered:\"" + message + "\"");

	}

}

